<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Kingshot Game - Single File</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #1e1e1e;
      color: white;
      text-align: center;
      margin: 0;
      padding: 0;
    }

    .game-container {
      padding: 20px;
    }

    #game-area {
      width: 600px;
      height: 400px;
      background-color: #444;
      margin: 20px auto;
      position: relative;
      overflow: hidden;
      border: 3px solid #fff;
    }

    #target {
      width: 60px;
      height: 60px;
      position: absolute;
      cursor: pointer;
    }

    #start-button {
      padding: 10px 20px;
      font-size: 18px;
      cursor: pointer;
      background: #4CAF50;
      border: none;
      color: white;
      border-radius: 5px;
    }

    #score-board {
      font-size: 24px;
      margin-top: 10px;
    }

    #timer {
      font-size: 20px;
      margin-top: 5px;
      color: #ffc107;
    }
  </style>
</head>
<body>
  <div class="game-container">
    <h1>Kingshot Game 👑🎯</h1>
    <div id="score-board">Score: <span id="score">0</span></div>
    <div id="timer">Time Left: <span id="time">30</span> seconds</div>
    <div id="game-area">
      <img src="https://i.imgur.com/2DhmtJ4.png" id="target" alt="Target" />
    </div>
    <button id="start-button">Start Game</button>
  </div>

  <script>
    const target = document.getElementById("target");
    const scoreDisplay = document.getElementById("score");
    const startButton = document.getElementById("start-button");
    const gameArea = document.getElementById("game-area");
    const timeDisplay = document.getElementById("time");

    let score = 0;
    let gameInterval;
    let countdownInterval;
    let timeLeft = 30;

    function getRandomPosition() {
      const x = Math.random() * (gameArea.clientWidth - 60);
      const y = Math.random() * (gameArea.clientHeight - 60);
      return { x, y };
    }

    function moveTarget() {
      const { x, y } = getRandomPosition();
      target.style.left = `${x}px`;
      target.style.top = `${y}px`;
    }

    function endGame() {
      clearInterval(gameInterval);
      clearInterval(countdownInterval);
      alert("⏱ Time's up! Your final score is: " + score);
    }

    function startGame() {
      score = 0;
      scoreDisplay.textContent = score;
      timeLeft = 30;
      timeDisplay.textContent = timeLeft;
      moveTarget();

      clearInterval(gameInterval);
      clearInterval(countdownInterval);

      gameInterval = setInterval(moveTarget, 1000); // Move target every 1 second

      countdownInterval = setInterval(() => {
        timeLeft--;
        timeDisplay.textContent = timeLeft;
        if (timeLeft <= 0) {
          endGame();
        }
      }, 1000);
    }

    target.addEventListener("click", () => {
      score++;
      scoreDisplay.textContent = score;
      moveTarget();
    });

    startButton.addEventListener("click", startGame);
  </script>
</body>